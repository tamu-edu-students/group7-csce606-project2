<% if joined_projects.count == 0%>
  <% if temp_current_user == @user%>
    <div class="profile-placeholder">
      <%= image_tag "arrow-square-out-thin-svgrepo-com.svg", class: "small-icon", alt: "" %>
      <%= link_to "Join a project to get started.", projects_path, class:"link"%>
    </div>
  <% else %>
    <div><%= @user.name %> has no joined projects.</div>
  <% end %>
<% end %>

<% joined_projects.each do |project| %>
  <%= link_to project_path(project), class:"link" do %>
    <div class="info-card">
      <h3><%= project.title %></h3>
      <p><%= project.description %></p>
    </div>
  <% end %>
<% end %>
