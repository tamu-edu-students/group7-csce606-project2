<% if projects.count == 0%>
  <% if current_user == @user%>
    <div class="profile-placeholder">
      <%= image_tag "plus-svgrepo-com.svg", class: "small-icon", alt: "" %>
      <%= link_to "Create a project to get started.", new_project_path, class:"btn btn-success"%>
    </div>
  <% else %>
    <div><%= @user.name %> has no created projects.</div>
  <% end %>
 
<% end %>

<% projects.each do |project| %>
  <%= link_to project_path(project), class:"link" do %>
    <div class="info-card">
      <h3><%= project.title %></h3>
      <p><%= project.description %></p>
    </div>
  <% end %>
<% end %>
